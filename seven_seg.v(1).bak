module seven_seg (input [3:0] n, output[6:0] HEX);

	always@(n) begin
		case(x)
			4'b0000: HEX=5'b10000;
			4'b0001: HEx=5'b11110;
			4'b0010: HEX=5'b01001;
			4'b0011: HEX=5'b01100;
			4'b0100: HEX=5'b00110;
			4'b0101: HEX=5'b00100;
			4'b0110: HEX=5'b00000;
			4'b0111: HEX=5'b11110;
			4'b1000: HEX=5'b00000;
			4'b1001: HEX=5'b00100;
			4'b1010: HEX=5'b10001;
			4'b1011: HEX=5'b00010;
			4'b1100: HEX=5'b00010;
			4'b1101: HEX=5'b10011;
			4'b1110: HEX=5'b00100;
			4'b1111: HEX=5'b00011;
		endcase
	end
	
endmodule